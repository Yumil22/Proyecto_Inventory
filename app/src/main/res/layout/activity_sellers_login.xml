<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellersLogin.SellersLogin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        android:layout_above="@id/seller_login"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/seller_login"
    android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:textSize="18sp"
        style="@style/TextAppearance.AppCompat.Headline"
        android:id="@+id/text_match"
        android:layout_below="@id/seller_login"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_password"
        android:layout_centerVertical="true"
        android:layout_below="@id/text_match"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:layout_below="@id/seller_password"
        android:id="@+id/button_test"/>

</RelativeLayout>